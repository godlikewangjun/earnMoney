<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/ten">

        <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="150dp" />

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ten"
                android:orientation="horizontal">

            <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="标题"
                    android:textSize="@dimen/bar_title" />

            <TextView
                    android:id="@+id/detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/watch_detail"
                    android:drawableRight="@drawable/ic_right"
                    android:gravity="center_vertical"
                    android:textColor="@color/text_gray" />

        </LinearLayout>

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ten"
                android:orientation="horizontal">

            <TextView
                    android:id="@+id/conditions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text1"
                    android:text="@string/get_the_conditions" />

            <TextView
                    android:id="@+id/date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/conditions"
                    android:layout_marginTop="@dimen/five"
                    android:textColor="@color/text1"
                    android:text="@string/valid_time" />

            <TextView
                    android:id="@+id/ok"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/shape_gold"
                    android:gravity="center"
                    android:src="@drawable/ic_right"
                    android:text="@string/get_welfare"
                    android:textColor="@color/white" />
        </RelativeLayout>

    </LinearLayout>
    <View style="@style/div_ten" android:layout_marginTop="@dimen/ten"/>
</LinearLayout>