<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/shape_white">

    <RelativeLayout
        android:layout_width="250.0dip"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" >

        <TextView
            android:id="@+id/dialogTitle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="50.0dip"
            android:layout_marginRight="50.0dip"
            android:layout_marginTop="24.0dip"
            android:gravity="center_horizontal"
            android:text="@string/permission_dialog"
            android:textColor="@color/text"
            android:textSize="@dimen/title" />

        <LinearLayout
            android:id="@+id/group_permissions"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dialogTitle"
            android:layout_marginTop="23.0dip" >

            <LinearLayout
                android:id="@+id/ly_permissions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/ly_shouji"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="19.0dip"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="17.5dip"
                        android:layout_marginRight="6.5dip"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_phone_state" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/five"
                            android:text="@string/permission_dialog1"
                            android:textColor="@color/text"
                            android:textSize="@dimen/title" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:lineSpacingMultiplier="1.1"
                            android:text="@string/permission_dialog2"
                            android:textSize="@dimen/small_text"
                            android:textColor="@color/text_gray" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ly_cunchu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="28.0dip"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="17.5dip"
                        android:layout_marginRight="6.5dip"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_sdcard" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/five"
                            android:textSize="@dimen/title"
                            android:textColor="@color/text"
                            android:text="@string/permission_dialog3"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="26.5dip"
                            android:lineSpacingMultiplier="1.1"
                            android:textSize="@dimen/small_text"
                            android:textColor="@color/text_gray"
                            android:text="@string/permission_dialog4" />
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_open"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:background="@drawable/ripple_login"
                    android:gravity="center"
                    android:paddingBottom="10.0dip"
                    android:paddingTop="10.0dip"
                    android:text="开启"
                    android:textColor="@color/white"
                    android:textSize="18.0sp" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>