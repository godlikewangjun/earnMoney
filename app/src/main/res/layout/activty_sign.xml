<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/shape_orage">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <ImageView
                android:layout_width="250dp"
                android:layout_height="30dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:background="@drawable/ic_qdqt" />

        <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="40dp">

            <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp">

                <ImageView
                        android:layout_width="170dp"
                        android:layout_height="140dp"
                        android:src="@drawable/ic_jf_left" />

                <ImageView
                        android:layout_width="170dp"
                        android:layout_height="140dp"
                        android:layout_marginLeft="220dp"
                        android:src="@drawable/ic_jf_right" />
            </FrameLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="150dp"
                    android:layout_marginRight="20dp"
                    android:orientation="vertical"
                    android:background="@drawable/shape_white_c">

                <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <ImageView
                            android:id="@+id/sign_jf"
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:layout_marginTop="50dp"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/sign_jf"/>
                    <TextView
                            android:id="@+id/days_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="120dp"
                            android:textSize="@dimen/bar_title"
                            android:text="0å¤©"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="30dp"
                            android:textColor="@color/text_gray"
                            android:text="@string/sign_count"/>
                </FrameLayout>


                <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/days"
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="15dp"
                       android:layout_marginTop="@dimen/ten"/>
                <Button
                        android:id="@+id/sign"
                        android:layout_width="250dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="20dp"
                        android:textColor="@color/white"
                        android:background="@drawable/shape_sign_btn_orage"
                        android:text="@string/sign_now"/>
                <TextView
                        android:id="@+id/sign_rule"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="20dp"
                        android:textColor="@color/text_gray"
                        android:text="@string/point_rule"/>

            </LinearLayout>

            <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true">

                <ImageView
                        android:layout_width="200dp"
                        android:layout_height="170dp"
                        android:src="@drawable/ic_jf" />

                <TextView
                        android:id="@+id/user_points"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="40dp"
                        android:text="0"
                        android:textStyle="bold"
                        android:textSize="@dimen/bar_title"
                        android:textColor="@color/white" />

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="70dp"
                        android:text="@string/my_jf"
                        android:textColor="@color/white"
                        android:textSize="@dimen/small_text" />
            </RelativeLayout>

        </RelativeLayout>
        <ImageView
                android:id="@+id/jfcj"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:padding="20dp"
                android:scaleType="fitXY"
                android:src="@mipmap/img_home_kap_chouj" />
    </LinearLayout>
</androidx.core.widget.NestedScrollView>